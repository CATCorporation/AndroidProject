<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matiereSpin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#ff434cff" />

    <EditText
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/noteText"
        android:layout_below="@+id/matiereSpin"
        android:layout_alignLeft="@+id/matiereSpin"
        android:layout_alignStart="@+id/matiereSpin"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:id="@+id/addNote"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/noteText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noteSpin"
        android:layout_marginTop="20dp"
        android:background="#ffa56eff"
        android:layout_below="@+id/addNote"
        android:layout_alignLeft="@+id/noteText"
        android:layout_alignStart="@+id/noteText"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        android:id="@+id/delNote"
        android:layout_below="@+id/noteSpin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>

